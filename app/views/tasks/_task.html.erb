
<div class="row clearfix">
	<% if task.completed? %>

		<div class="completed">
			<%= link_to "Done", complete_list_task_path(@list, task.id), method: :patch %>
		</div>
		
		<div class="task">
			<p style="opacity: 0.4;"><stirke><%= task.content %></strike></p>
		</div>

		<div class="trash">
			<%= link_to "Delete", list_task_path(@list, task.id), method: :delete, data: {confirm: "Are you sure?"} %>
		</div>

	<% else %>


		<div class="completed">
			<%= link_to "Done", complete_list_task_path(@list, task.id), method: :patch %>
		</div>

		<div class="task">
			<p> <%= task.content %> </p>
		</div>

		<div class="trash">
			<%= link_to "Delete", list_task_path(@list, task.id), method: :delete, data: {confirm: "Are you sure?"} %>
		</div>


	<% end %>
</div>